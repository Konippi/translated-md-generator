{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "commitBody": "Generated by Renovate Bot",
  "automergeSchedule": ["every weekend"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "types",
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "packagePatterns": ["^@types/"]
    },
    {
      "groupName": "eslint",
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePatterns": ["eslint"]
    }
  ]
}
